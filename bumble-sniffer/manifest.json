{
  "manifest_version": 3,
  "name": "Bumble API Sniffer",
  "version": "1.0",
  "description": "Intercepts Bumble recs and saves data + photos",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://*.bumble.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.bumble.com/*"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["interceptor.js", "html2canvas.min.js"],
      "matches": ["https://*.bumble.com/*"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
